// .eslintrc.json
{
    "env": {
        "browser": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": ["react", "jsx-a11y", "import"],
    "rules": {
        // Add your rules here
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
